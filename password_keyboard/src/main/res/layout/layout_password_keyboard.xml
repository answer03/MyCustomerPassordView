<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:allenmeng="http://schemas.android.com/apk/res-auto"
    android:background="#1A1A1A"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/layoutBack"
            android:padding="5dp"
            android:src="@mipmap/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerInParent="true"
            android:text="@string/tip_text"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <project.com.password_keyboard.view.PassWordLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        allenmeng:item_width ="40dp"
        allenmeng:item_height="40dp"
        allenmeng:interval_width="8dp"
        allenmeng:pass_inputed_type="circle"
        allenmeng:pass_leng="six"
        android:id="@+id/password_input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="30dp"
        android:textSize="16sp"
        android:text="@string/forget_password"
        android:textColor="@color/regi_line_color"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_keybord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#bdbdbd"
        android:horizontalSpacing="1px"
        android:numColumns="3"
        android:verticalSpacing="1px" />

</LinearLayout>